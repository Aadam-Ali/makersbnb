<!doctype html>
<html lang="en">
  <head>
    <!-- Required meta tags -->
    <meta charset="utf-8">
    <meta name="viewport" content="width=device-width, initial-scale=1">

    <!-- Bootstrap CSS -->
    <link href="https://cdn.jsdelivr.net/npm/bootstrap@5.1.3/dist/css/bootstrap.min.css" rel="stylesheet" integrity="sha384-1BmE4kWBq78iYhFldvKuhfTAU6auU8tT94WrHftjDbrCEXSU1oBoqyl2QvZ6jIW3" crossorigin="anonymous">
    <title>MakersBnB</title>
  </head>
  <body>
    <nav class="nav nav-pills flex-column flex-sm-row">
    <a class="flex-sm-fill text-sm-center nav-link" aria-current="page" href="/spaces">Spaces</a>
    <a class="flex-sm-fill text-sm-center nav-link" href="/users/bookings">Bookings</a>
    <a class="flex-sm-fill text-sm-center nav-link" href="/users/requests">Requests</a>
    <a class="flex-sm-fill text-sm-center nav-link" href="/login">Logout</a>
    </nav>
    <br>
      <h3 class="text-center">Hi <%= @username %></h3>
      <br> 
      <div class="d-flex justify-content-start flex-wrap" style="width: 80%; margin: auto;">
        <% @spaces.each do |space| %>
          <div class="card" style="width: 18rem; margin: 2rem;">
            <div class="card-body">
              <h5 class="card-title"> <%= space.name %> </h5>
              <h6 class="card-subtitle mb-2 text-muted"><%= space.description %> </h6>
              <a href="/spaces/<%= space.id%>" class="btn btn-primary">View</a>
            </div>
        </div>
        <% end %>
      </div>
      <br> 
      <br>

    <form class="text-center" action="spaces/new" method="get"> 
      <div class="mb-3 align-items-center">
      <button type="submit" class="btn btn-primary">Create new listing</button>
      </div>
    </form>
    <!-- Option 1: Bootstrap Bundle with Popper -->
    <script src="https://cdn.jsdelivr.net/npm/bootstrap@5.1.3/dist/js/bootstrap.bundle.min.js" integrity="sha384-ka7Sk0Gln4gmtz2MlQnikT1wXgYsOg+OMhuP+IlRH9sENBO0LRn5q+8nbTov4+1p" crossorigin="anonymous"></script>
  </body>
</html>
