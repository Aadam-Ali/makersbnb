      <input type="date" id="booking_date " name="booking_date" value=<%= @space.available_from %>  min=<%= @space.available_from %> max=<%= @space.available_to%>>
      <button type="submit" class="btn btn-primary">Book</button>
    </form>
 
    <!-- Option 1: Bootstrap Bundle with Popper -->
